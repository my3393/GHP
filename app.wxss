/* 弹窗 */
.mask{
    top:0px;

    left: 0px;

    width: 100%;

    height: 100%;

    overflow: hidden;

    position: fixed;
     background: rgba(0, 0, 0, 0.3);
    z-index: 9;
}
.popup{
  width: calc(100% - 100rpx);
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  z-index: 12;
}
.popup_h1{
  font-size: 32rpx;
  text-align: center;
}
.popup_content{
  text-align: center;
  color: #999999;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.popup_btn{
  display: flex;
  justify-content: space-around;
}
.popup_btn>view{
  width: 190rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 40rpx;
  margin-top: 40rpx;
}
.popup_btn>view:nth-child(1){
  border: 1rpx #F12200 solid;
  box-sizing: border-box;
  color: #f12200;
}
.popup_btn>view:nth-child(2){
  background:linear-gradient(to right, #f12200, #ff4e17);
  color: #fff;
}

.a_submit{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background:linear-gradient(to right, #f12200, #ff4e17);
  border-radius: 40rpx;
}
