/* pages/certification/certification.wxss */
@import '../store_refund/store_refund';
.nop{
  margin-left: 12rpx;
  margin-top: 2rpx;
}
.nav{

  padding: 30rpx 60rpx;
  box-sizing: border-box;

}
.nav{
  display: flex;
  justify-content: space-between;
  width: 100%;
  text-align: center;
}
.nav>view{
   width:calc((100% - 40rpx)/2);
   
}
.zhao{
  width: 100%;
  height: 190rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 8rpx;
  text-align: center;
  color: #999999;
  font-size: 22rpx;
  display: inline-block;
  box-sizing: border-box;
}
.tu_img{
  width: 100%;
  height: 190rpx;
  position: relative;
}
.tu_img image{
  width: 100%;
  height: 100%;
}
.detele{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -16rpx;
  right: -16rpx;
}
.detele img{
  width: 100%;
  height: 100%;
}
.zhao_img{
  width: 46rpx;
  height: 46rpx;
  display: inline-block;
  margin-top: 60rpx;
}
.zhao_img image{
  width: 100%;
  height: 100%;
}
.zhao_tit{
  color: #333;
}
button.submit{
  width: calc(100% - 100rpx);
  padding: 0;
  margin-left: 50rpx;
  height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  color: #fff;
  border-radius: 40rpx;
  margin-top: 30rpx;
  display: inline-block;
  font-size: 24rpx;
  background:linear-gradient(to right, #f12200, #ff4e17);
}
.list{
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;

}
.list>view:nth-child(1){
  border-bottom: 1rpx solid #f3f3f3;
  display: inline-block;
}
.list_n{
  font-size: 30rpx;
  line-height: 60rpx;
}
.list_num{
  font-size: 26rpx;

}
.yan{
  float: right;
  margin-top: 30rpx;
}
.liy{
  margin-top: 30rpx;
}
.chs{
  color: #666;
}
.submits{
  margin-top: 120rpx!important;
}
.shim{
  width: 112rpx;
  height: 97rpx;
  float: right;
}
.shim image{
  width: 100%;
  height: 100%;
}