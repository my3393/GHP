.top{
  width: 100%;
  background: #fff;
  height: 60rpx;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
  line-height: 60rpx;
  z-index: 9;
}
.top_a{
  color: #f12200;
  border-bottom: 2rpx solid #f12200;
}
.infor{
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #f2f2f2;
  line-height: 100rpx;
  position: relative;
}
.inform{
 float: left;
 margin-top: 3rpx;
  margin-right: 20rpx;
}
.inforin{
  display: inline-block;
  vertical-align: middle;
}
.inforin input{
  width: 560rpx;
  letter-spacing: 2rpx;
}
.forin{
  margin-left: 30rpx;
}
.enter{
  position: absolute;
  right: 24rpx ;
  top: 8rpx;
}
.enter image{
  margin-left: 25rpx;
  width: 20rpx;
  height: 26rpx;
}
.nav{
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  color: #999;
}
.zhao{
  width: 140rpx;
  height: 140rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 8rpx;
  text-align: center;
  color: #999999;
  font-size: 22rpx;
  display: inline-block;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.tu_img{
   width: 140rpx;
  height: 140rpx;
  margin-bottom: 20rpx;
  float: left;
}
.tu_img image{
  width: 100%;
  height: 100%;
}
.zhao_img{
  width: 46rpx;
  height: 46rpx; 
  display: inline-block;
  margin-top: 30rpx; 
}
.zhao_img image{
  width: 100%;
  height: 100%;
}
.nop_rs{
  float: right;
  margin-right: 20rpx;
}
.texta{
  width: 100%;
  height: 200rpx;
  color: #333;
}
.submit{
  margin-top: 30rpx;
  width: calc(100% - 80rpx);
  margin-left: 40rpx;
  height: 80rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  background:linear-gradient(to right, #f12200, #ff4e17);
  border-radius: 40rpx;
  justify-content: space-between
