<!-- pages/order_all/order_all.wxml -->
<view class='orders'>
    <view wx:for="{{tag}}" wx:for-index="idx" bind:tap="tag" data-index='{{idx}}' class="{{tar  == idx? 'tag_a' : ''}}">
        {{item.name}}
    </view>
</view>
<view wx:if='{{detail.length == 0}}' class="kong">
    <view class="kong_img">
        <image src="../../images/noplay.png" />
    </view>
    <view>没有相关订单</view>
    <view class='home'>立即选购</view>
    <view class="foot-boot foot-boots">
        善家购
        <view class="foot-boot-m">大爱无疆，感恩家乡</view>
    </view>
</view>
<view wx:else class="nav">
    <view class="list">
        <view class="nav_top">
            <view class="sotre_img">
                <image src="../../images/store.png" />
            </view>
            良品铺子
            <view class="store_r">
                <image src="../../images/right.png" />
            </view>
            <!-- <view class="store_d yan">等待买家付款</view> -->
            <view class="store_d ">买家已付款</view>
        </view>
        <view class="good clearfix">
            <view class="good_img">
                <image src="../../images/te.png" />
            </view>
            <view class="good_list">
                <view class='goodsname dan'>青海特产可可西里藏獒特色牛...</view>
                <text class='specification'>银川市 西夏区 贺兰山西路街道</text>
                <view class="guig">
                    <view class='gui-g'>袋装500g</view>
                     <view class="tuik">退款中</view>
                </view>
                
                <view>
                    <view class='price'>
                        <text class="yuan">￥</text>
                        29.9
                    </view>
                    <view class="good_num">*2</view>
                </view>
                <view class="zai_r">
                    <view class="good_sp">
                        共一件商品，订单金额：
                        <view class="font good_pric">
                            <text style="font-size:22rpx">￥</text>
                            56
                        </view>
                    </view>
                    <!-- <view class="pay">付款 24:38</view> -->
                    <!-- <view class="wuliu">
                       
                        <view class="quer">
                            确认收货
                        </view>
                         <view >
                            查看物流
                        </view>
                    </view> -->
                    <view class="wuliu">
                        <view>删除订单</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>