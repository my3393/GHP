<!--pages/live_add/live_add.wxml-->
<view class='infor'>
      <view class='inform put'>姓 名</view>
      <view class='inforin' style="margin-left:28rpx">
        <input type='text' value="{{name}}" placeholder='请输入姓名' bindinput='name'></input>
      </view>
    </view>
    <view class='infor'>
      <view class='inform'>手机号</view>
      <view class='inforin'>
        <input maxlength='11' type='number' value="{{phone}}" placeholder='请输入联系人手机号' bindinput='phone'></input>
      </view>
    </view>
     <view class='infor'>
      <view class='inform'>微信号</view>
      <view class='inforin'>
        <input  type='text' value="{{wx}}" placeholder='请输入主播微信号' bindinput='wx'></input>
      </view>
    </view>
    <view class='infor'>
      <view class='inform'>直播区域</view>
      <view class='inforin'>
        <input  type='text' value="{{pro}}" placeholder='请输入直播所在省（选填）' bindinput='pro'></input>
      </view>
    </view>
    <view class='infor'>
      <view class='inform'>备注信息</view>
      <view class='inforin'>
        <input  type='text' value="{{remark}}" placeholder='备注（选填）' bindinput='remark'></input>
      </view>
    </view>
<view class="a_submit sub" bindtap="sub">
    保存
  </view>