.goods-j{
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 26rpx;
}
.goods-q{
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}
.goods-t{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.goods-p{
  color: #f12200;
}
.goods-g{
  width: 38rpx;
  height: 38rpx;
  background: #f3f3f3;
  border-radius: 50%;
  text-align: center;
  line-height: 38rpx;
}
.goods-g image{
  width: 21rpx;
  height: 23rpx;
}
.banner{
  margin: 24rpx 0;
  height: 180rpx;

}
.banner image{
  width: 100%;
  height: 100%;
}
.active{
  background: #fff;
  color: #333;
  border-left: 4rpx solid #f12200;
}
.kong{
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
.kong_img{
  width: 300rpx;
  height: 250rpx;
}
.kong_img image{
  width: 100%;
  height: 100%;
}
.bangd{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  border-radius: 30rpx;
  margin-top: 30rpx;
  display: inline-block;
  font-size: 24rpx;
  background:linear-gradient(to right, #f12200, #ff4e17);
}

