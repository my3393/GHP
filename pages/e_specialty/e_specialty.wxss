page{
  font-size: 26rpx;
}
.top{
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  background: #FEE8E5;
  color: #333;
  font-size: 22rpx;
}
.nac_top{
  float: left;
  font-size: 24rpx;
  color: #fff;
  margin-left: 20rpx;
}
.zhng{
  font-size: 34rpx;
  font-weight: bold;
  

}
.tags{
  font-size: 24rpx;
}
.top-img{
  width: 22rpx;
  height: 22rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.top-img image{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.top-left{
  display: inline-block;
}
.top-r{
  display: inline-block;
  margin-left: 20rpx;
  vertical-align: middle;
}
.bg-white{
  background: #f12200;
}
.left-navbar{
  position:absolute;
  left:0;
  width:25%;
  height:85%;
  background-color:#F9F9F9;
  font-size:15px;
}
.left-navbar view{
  height:88rpx;
  line-height: 88rpx;
  text-align:center;
}

#right{
  position:absolute;
  right:0;
  width:75%;
  height:84%;

  padding: 0 20rpx;
  box-sizing: border-box;
}
.img-banner{
  height:150rpx;
  width:100%;
}
.goods-list{
  margin-bottom: 20rpx;
}
.goods-img{
  width: 156rpx;
  height: 156rpx;
  float: left;
  margin-right: 18rpx;
}
.goods-img image{
  width: 100%;
  height: 100%;
}
