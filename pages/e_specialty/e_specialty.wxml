    </scroll-view>
    <!-- <view class="goods">
      <swiper class="banner" indicator-dots="true" circular="true" autoplay="true" duration="1000" indicator-color="#a7a7a7" indicator-active-color="#fe5ba9">
        <block wx:for='{{photos}}' wx:key="{{item.id}}">
