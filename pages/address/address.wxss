/* pages/address/address.wxss */
page{
    background: #f9f9f9;
    font-size: 24rpx;
}
.kong{
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #999999;
    text-align: center;
}
.kong_img{
    width: 300rpx;
    height: 250rpx;
    display: inline-block;
    margin-bottom: 40rpx;
}
.kong_img image{
    width: 100%;
    height: 100%;
}
.list{
    padding: 20rpx;
    box-sizing: border-box;
    background: #fff;
    margin-top: 20rpx;
    /* width: calc(100% - 40rpx);
    margin-left: 20rpx; */
    border-radius: 12rpx;
   
}
.list_name{
    font-size: 28rpx;

}
.list_name>text{
    font-size: 24rpx;
}
.list_q{
    margin: 14rpx 0;
    line-height: 40rpx;
    padding-bottom: 20rpx;
    border-bottom: 1rpx #f3f3f3 solid;
}
.list_bott{
    display: flex;
    justify-content: space-between;
}
.bott_r>view{
   display: inline-block;
   margin-left: 30rpx;
   font-size: 32rpx;
}
.bott_r>view:nth-child(2){
    color: #f12200;
}

.footer{
    background: #fff;
    height: 100rpx;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    line-height: 100rpx;
}
.footer>view{
   
    width: calc((100% - 90rpx)/2);
    height: 70rpx;
    display: inline-block;
    text-align: center;
    line-height: 70rpx;
    border-radius: 40rpx;
    box-sizing: border-box;
    font-family: PingFang-SC-Medium;
    margin-left: 30rpx;
}
.footer>view:nth-child(1){
    border: 1rpx #FF0000 solid;
    color: #FF0000;
}
.footer>view:nth-child(2){
    border: 1rpx #2BA245 solid;
    color: #2BA245;
}
.wx_img{
    display: inline-block;
    vertical-align: top;
}
.wx_img image{
  width: 32rpx;
  height: 28rpx;  
  float: left;
  margin-top: 20rpx;
}
.wx-switch-input{width:84rpx !important;height:40rpx !important;}
.wx-switch-input::before{width:82rpx !important;height: 40rpx !important;}
.wx-switch-input::after{ width: 36rpx !important;height: 36rpx !important;}

.add{
    width: calc(100% - 60rpx) !important;
    height: 70rpx;
    background:linear-gradient(to right, #f12200, #ff4e17);
    color: #fff!important;
}
