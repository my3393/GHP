/* pages/live/live.wxss */
page{
  background: #f9f9f9;
  font-size: 28rpx;
}
.nav{
  width: calc(100% - 60rpx);
  margin-left: 30rpx;
  background: #fff;
  margin-top: 30rpx;
  border-radius: 12rpx;
}
.top{
  padding: 20rpx;
  box-sizing: border-box;

}
.mine{
  display: flex;
  justify-content: space-between;
  color: #999;
  margin: 20rpx 0;
}
.img{
  width: 100%;
  position: relative;
}
.share{
  width: 100%;

  height: 472rpx;
}
.live_s{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.4);
  padding: 4rpx 16rpx;
  padding-right: 18rpx;
  border-radius: 30rpx;
}
.live_s image{
  width: 28rpx;
  height: 28rpx;
  float: left;
  margin-top: 7rpx;
  margin-right: 10rpx;
}