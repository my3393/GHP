.tar{
   background: #fff;
   padding-top: 30rpx;
   box-sizing: border-box;
   display: flex;
   justify-content: space-around;
   padding-bottom: 20rpx;

}
.active{
  color: #f12200;
  border-bottom: 4rpx solid #f12200;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.banner{
  width: calc(100% - 40rpx);
  margin-left: 20rpx;
  height: 260rpx;
  margin-top: 30rpx;
  border-radius: 8rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.navs{
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;

}
.navs_list{
  text-align: center;
}
.navs_list image{
  width: 94rpx;
  height: 94rpx;
  margin-bottom: 10rpx;
}
.today{
  margin-top: 30rpx;
  
}
.today>view{
  width: calc((100% - 60rpx)/2);
  margin-left: 20rpx;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  display: inline-block;
}
.h1{
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
}
.tooday_img{
 width: calc((100% - 60rpx)/2);
  margin-left: 20rpx;
  display: inline-block;
  
}
.tooday_img image{
  width: 100%;
 height: 140rpx;

}
.tooday_img{
  color: #f12200;
}
.advert{
  width: calc(100% - 40rpx);
   overflow: hidden;
  border-radius: 70rpx;
  height: 170rpx;
  margin: 20rpx 0;
  margin-left: 20rpx;
}
.advert image{
  width: 100%;
  height: 100%;
}
